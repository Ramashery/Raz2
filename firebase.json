{
  "hosting": {
    "site": "raz2raz2",
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".github/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|svg|png|jpg|webp|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ],
    "rewrites": [
      { "source": "/services/**", "destination": "/page.html" },
      { "source": "/*/services/**", "destination": "/page.html" },
      { "source": "/portfolio/**", "destination": "/page.html" },
      { "source": "/*/portfolio/**", "destination": "/page.html" },
      { "source": "/blog/**", "destination": "/page.html" },
      { "source": "/*/blog/**", "destination": "/page.html" },
      { "source": "/contact/**", "destination": "/page.html" },
      { "source": "/*/contact/**", "destination": "/page.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
