{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "generate_site.py",
      "*_template.html",
      "template.html",
      ".env"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|apng|avif|gif|jpg|jpeg|jfif|pjpeg|pjp|png|svg|webp|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ]
  }
}
